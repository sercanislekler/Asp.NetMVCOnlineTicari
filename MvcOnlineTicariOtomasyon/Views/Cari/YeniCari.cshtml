@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Cariler
@{
    ViewBag.Title = "YeniCari";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<h2>Yeni Cari Ekleme</h2>
<br/>
<form method="post" class="form-group">
    @Html.HiddenFor(x=>x.CariID)
    @Html.Label("Cari Ad")
    @Html.TextBoxFor(x=>x.CariAd,new { @class = "form-control" })
    <br/>
    @Html.Label("Cari Soyad")
    @Html.TextBoxFor(x=>x.CariSoyad,new { @class = "form-control" })
    <br/>
    @Html.Label("Şehir")
    @Html.TextBoxFor(x=>x.CariSehir,new { @class = "form-control" })
    <br/>
    @Html.Label("Mail")
    @Html.TextBoxFor(x=>x.CariMail,new { @class = "form-control" })
    <br/>
    <button class="btn btn-info">Cari Ekle</button>
</form>