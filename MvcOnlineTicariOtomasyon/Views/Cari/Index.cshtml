@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<h2>Cari Listesi</h2>
<br/>
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Cari Ad</th>
        <th>Cari Soyad</th>
        <th>Cari Şehir</th>
        <th>Cari Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>@item.CariID</td>
        <td>@item.CariAd</td>
        <td>@item.CariSoyad</td>
        <td>@item.CariSehir</td>
        <td>@item.CariMail</td>
        <td><a href="/Cari/CariSil/@item.CariID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Cari/CariGetir/@item.CariID" class="btn btn-warning">Güncelle</a></td>
        <td><a href="#" class="btn btn-info">Detay</a></td>
    </tr>
    }
</table>
<a href="/Cari/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>