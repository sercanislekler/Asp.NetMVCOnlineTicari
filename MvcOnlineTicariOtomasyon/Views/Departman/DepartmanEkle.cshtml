@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br/>
<h2>Departman Ekleme Sayfası</h2>
<br/>
<form method="post">
    @Html.Label("Departman Adı")
    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
    <br />
    <label>@ViewBag.msg</label>
    <button class="btn btn-success">Kaydet</button>
</form>
