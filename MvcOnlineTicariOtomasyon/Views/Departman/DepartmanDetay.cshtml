@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<h2>Departman Detay Listesi</h2>
<br/>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Departman Adı : @ViewBag.d</li>
</ol>
<table class="table">
    <tr>
        <th>Personel ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>@item.PersonelID</td>
        <td>@item.PersonelAd</td>
        <td>@item.PersonelSoyad</td>
        <td>@item.PersonelGorsel</td>
        <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-info">Satışlar</a></td>
    </tr>
    }
</table>
